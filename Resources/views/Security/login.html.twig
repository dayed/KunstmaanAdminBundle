{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    <form role="form" method="post" action="{{ path("fos_user_security_check") }}">
        <!-- Errors -->
        {% if error %}
            <div class="alert alert-danger">
                Wrong password or email
            </div>
        {% endif %}
        <!-- Username -->
        <div class="form-group">
            <label for="username">
                {{ 'Username:' | trans }}
            </label>
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="fa fa--user"></i>
                </span>
                <input type="text" name="_username" value="{{ last_username }}" placeholder="{{ 'Username' | trans }}" autofocus id="username" class="form-control">
            </div>
        </div>
        <!-- Passwords -->
        <div class="form-group">
            <label for="password">
                {{ 'Password:' | trans }}
            </label>
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="fa fa--key"></i>
                </span>
                <input type="password" name="_password" value="" placeholder="{{ 'Password' | trans }}" id="password" class="form-control">
            </div>
        </div>
        <!-- Remember -->
        <div class="checkbox">
            <label>
                <input type="checkbox" id="remember_me" name="_remember_me" value="on">
                {{ 'Remember Me' | trans }}
            </label>
        </div>
        <!-- Submit -->
        <button type="submit" id="_submit" name="_submit" class="btn btn-default">
            Login
        </button>
    </form>
{% endblock fos_user_content %}
